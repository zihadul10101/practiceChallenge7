<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="2">



  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:layout_weight="1"
      >
      <ImageView
          android:id="@+id/plyer1"
          android:layout_width="210dp"
          android:layout_height="200dp"
          android:src="@drawable/shakib_al_hasan"
          android:visibility="visible"
          />

      <ImageView
          android:id="@+id/plyer2"
          android:layout_width="210dp"
          android:layout_height="200dp"
          android:visibility="visible"
          android:src="@drawable/mahmudullah"
          />
      <ImageView
          android:id="@+id/plyer3"
          android:layout_width="210dp"
          android:layout_height="200dp"
          android:visibility="visible"
          android:src="@drawable/tamim_iqbal"
          />
      <ImageView
          android:id="@+id/plyer4"
          android:layout_width="210dp"
          android:layout_height="200dp"
          android:visibility="visible"
          android:src="@drawable/sabbir_rahman"
          />
      <ImageView
          android:id="@+id/plyer5"
          android:layout_width="210dp"
          android:layout_height="200dp"
          android:visibility="visible"
          android:src="@drawable/mehidy_hasan"
          />

  </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#6ED8CE"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/flag"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:visibility="visible"
                android:src="@drawable/flag" />
            <TextView
                android:id="@+id/plyerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:text="Player Name:"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#3F51B5"
                />
            <TextView
                android:id="@+id/plyerType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:text="Player Type:"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#3F51B5"
                />

            <TextView
                android:id="@+id/plyerDec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:text="Player Dec:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textColor="#3F51B5"
                />


        </LinearLayout>
    </LinearLayout>

</ScrollView>